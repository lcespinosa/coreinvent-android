                            android:textColor="#E53A3C"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.6"
                            android:textColor="@color/onBackground"
                            android:text="/" />
                        <TextView
                            android:id="@+id/medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="24"
                            android:textColor="#FF5D5D"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.6"
                            android:textColor="@color/onBackground"
                            android:text="/" />
                        <TextView
                            android:id="@+id/low"
