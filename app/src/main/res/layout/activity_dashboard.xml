                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.6"
                            android:textColor="@color/onBackground"
                            android:text="/" />
                        <TextView
                            android:id="@+id/high"
                            android:layout_width="wrap_content"
