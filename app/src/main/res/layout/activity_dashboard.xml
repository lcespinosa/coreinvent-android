                            android:textColor="@color/onBackground"
                            android:text="/" />
                        <TextView
                            android:id="@+id/none"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="121"
                            android:textColor="#FFEDF0"
                            android:textSize="12sp" />



                    </LinearLayout>


                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </LinearLayout>

