                                android:alpha="0.4"
                                android:textColor="@color/onBackground" />

                            <TextView
                                android:id="@+id/slach"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:layout_marginTop="2dp"
