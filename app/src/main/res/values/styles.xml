<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">"@font/roboto"</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/onPrimary</item>
        <item name="colorAccent">@color/secondaryLightVariant</item>
        <item name="colorOnSurface">@color/onBackground</item> // Normal State
        <item name="android:textColorHint">@color/primary</item>

<!--        <item name="checkboxStyle">@style/Widget.MaterialComponents.CompoundButton.CheckBox</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="switchStyle">
        <item name="colorAccent">@color/secondaryLightVariant</item>
    </style>

    <style name="FullScreenDialog" parent="Theme.AppCompat.Light.DialogWhenLarge">
        <item name="android:windowAnimationStyle">@style/Animation.Design.BottomSheetDialog</item>
    </style>

    <style name="DialogTheme_transparent" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--You can set other style items also, such as animations and etc-->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

<!--    <color name="mtrl_textinput_default_box_stroke_color">#33BB86FC</color>-->

    <!--    custom styles-->
    <style name="firstLine">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/onBackground</item>
    </style>

    <style name="secondLine">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/onBackground</item>
    </style>

    <style name="thirdLine">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/onBackground</item>
    </style>

